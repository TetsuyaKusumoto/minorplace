<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-inner">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1 class="logo">
            <%= link_to "MINORPLACE", root_path, class: "navbar-brand" %>
          </h1>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% unless logged_in? %>
              <li>
                <%= link_to new_place_path do %>
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  検索
                <% end %>
              </li>
              <li>
                <%= link_to signup_path do %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  新規登録
                <% end %>
              </li>
              <li>
                <%= link_to login_path do %>
                  <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                  ログイン
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to search_place_path do %>
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  検索
                <% end %>
              </li>
              <li>
                <%= link_to new_place_path do %>
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  プレイスを追加
                <% end %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
                    ランキング
                  </span>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "行ったランキング" , visit_ranking_path  %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "マイナーランキング", want_ranking_path  %>
                  </li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="gravatar">
                    <%= gravatar_for current_user , size: 20 %>
                  </span>
                  <%= current_user.name %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "プロフィール" , current_user  %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "プロフィール編集" , edit_user_path(current_user)  %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "ログアウト", logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
