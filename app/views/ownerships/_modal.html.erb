<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@ownership, remote: true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">行った！場所の写真をシェアしよう！</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :comment, 'コメント' %><br>
          <%= f.text_field :comment, size: 50, maxlengh: 50, class: "form-control input-sm" %>
        </div>
        <div class="form-group">
          <%= f.label :photo, 'マイナープレイスの写真' %><br> 
          <%= f.file_field :photo, size: 30, class: "form-control input-sm", placeholder:"あなたの写真" %>
        </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
          <%= f.submit "登録", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
