<div class="box">
  <h2 class="box-title">プロフィール更新</h2>
  <div class="box-inner">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "お名前" %>
      </div>
      <div class="form-group">
        <%= f.text_field :nickname, class: "form-control", placeholder: "ユーザ名" %>
      </div>
      <div class="form-group">
        <%= f.text_field :prefecture, class: "form-control", placeholder: "住んでいる都道府県" %>
      </div>
      <div class="form-group">
        <%= f.text_field :address, class: "form-control", placeholder: "住所" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, class: "form-control", placeholder:"自己紹介を入力してください", rows:"3"  %>
      </div>
      <div class="form-group">
        <%= f.file_field :avator, class: "form-control input-sm", placeholder:"あなたの写真" %>
      </div>    
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認）" %>
      </div>
      <div class="submit-group">
        <%= f.submit "登録する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
