<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @visited_places.each do |place| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% #TODO 商品画像 %>
            <% @url = place.photo.url %>
            <% if @url.present? %>
              <%= image_tag(@url , alt: place.place_id) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: place.place_id) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            <% @comment = place.comment %>
            <% user = User.find_by(id: place.user_id) %>
            <% if @comment.present? %>
	      <%= @comment %> by <%= link_to user.name, user_path(user.id) %>
            <% else %>
              "no comment" by <%= link_to user.name , user_path(user.id) %>
            <% end %>
          </p>
        </div>
<% if false %>
        <div class="action clearfix">
          <%= link_to "" , ownerships_path(place_id: place.id , type: "Want") ,
                      :class => "want-#{place.id} btn-want btn btn-danger btn-sm want",
                      :remote => true,
                      :method => :post %>
          <%= link_to "" , ownerships_path(place_id: place.id , type: "Visit") ,
                      :class => "visit-#{place.id} btn-visit btn btn-warning btn-sm visit",
                      :remote => true,
                      :method => :post %>
        </div>
<% end %>
      </div>
    <% end %>
  </div>
</div>
